{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-sys --allow-run --watch ./main.ts",
    "start": "cd webapp && npx ng serve --proxy-config proxy.conf.json",
    "test": "cd webapp && npx ng test --browsers ChromeHeadless --code-coverage true --watch false"
  },
  "imports": {
    "@db/mongo": "jsr:@db/mongo@^0.34.0",
    "@oak/oak": "jsr:@oak/oak@^17.2.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/path": "jsr:@std/path@^1.1.0",
    "jose": "npm:jose@6.1.3"
  },
  "compilerOptions": {
    "strict": true
  },
  "exclude": ["webapp/"]
}
