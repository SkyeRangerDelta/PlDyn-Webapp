{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-sys --watch api/main.ts",
    "start": "cd webapp && npx ng serve --proxy-config proxy.conf.json",
    "test": "cd webapp && npx ng test --browsers ChromeHeadless --code-coverage true --watch false"
  },
  "imports": {
    "@angular/cli": "npm:@angular/cli@^18.2.11",
    "@db/mongo": "jsr:@db/mongo@^0.33.0",
    "@oak/oak": "jsr:@oak/oak@^17.1.3",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2",
    "@std/path": "jsr:@std/path@^1.0.8"
  },
  "compilerOptions": {
    "strict": true
  },
  "exclude": ["webapp/"]
}
